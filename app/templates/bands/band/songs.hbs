{{page-title @model.name "songs | Rock & Roll with Octane" replace=true}}

{{#if @model.songs.length}}
  <ul>
    {{#each @model.songs as |song|}}
      <li class="mb-2">
        {{song.title}}
        <span class="float-right">
            <StarRating 
            @rating={{song.rating}}
            @onUpdate={{set song "rating"}}
            />
        </span>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p class="text-center">
    The band has no songs yet.
  </p>
{{/if}}
{{#if this.showAddSong}}
<div class="flex justify-center mt-2">
<button
    type="button"
    class="addBtn"
    {{on "click" (set this "showAddSong" false)}}
>
    Add song
</button>
</div>
{{else}}
  <div class="mt-6 flex">
    <input
      type="text"
      class="addInput text-gray-800 bg-white rounded-md py-2 px-4"
      placeholder="Title"
      value={{this.title}}
      {{on "input" this.updateTitle}}
    />
    <button
      type="button"
      class="addBtn"
      {{on "click" this.saveSong}}
    >
      Save
    </button>
    <button
      type="button"
      class="cancelBtn"
      {{on "click" this.cancel}}
    >
      Cancel
    </button>
  </div>
{{/if}}